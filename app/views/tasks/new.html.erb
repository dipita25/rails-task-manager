<h1>create a task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br/>
  <%= f.label :details %>
  <%= f.text_field :details %><br/>
  <%= f.label :completed %>
  <%= f.check_box(:completed) %>
  <br/>
  <%= f.submit %>
<% end %>

<%= link_to "Back to List", tasks_path %>
